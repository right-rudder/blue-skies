      <%= image_tag "blue-skies-cessna-logo.webp", alt: "Cessna Logo", class: "hover:scale-105 duration-300"%>
    <%end%>
    <%= link_to "https://www.nafinet.org" do %>
      <%= image_tag "blue-skies-nafi-logo.webp", alt: "National Association of Flight Instructors logo", class: "hover:scale-105 duration-300"%>
    <%end%>
    <%= link_to "https://fsana.com/" do %>
      <%= image_tag "blue-skies-fsana-logo.webp", alt: "Flight School Association of North America", class: "hover:scale-105 duration-300"%>
    <%end%>
    <%= link_to "https://www.flighttrainingfinancellc.com/" do %>
