<!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden" role="dialog" aria-modal="true" >
    <div class="mt-16 pt-12 fixed inset-y-0 left-0 z-10 w-full overflow-y-auto bg-white px-6 py-6"
    
    x-show="mobileMenu"
    x-cloak
    x-transition:enter="transition ease-out duration-300 transform"
    x-transition:enter-start="translate-y-full opacity-0"
    x-transition:enter-end="translate-y-0 opacity-100"
    x-transition:leave="transition ease-in duration-300 transform"
    x-transition:leave-start="translate-y-0 opacity-100"
    x-transition:leave-end="translate-y-full opacity-0"
    >
      <div class="flex items-center justify-between">
        <div class="flex flex-1">
          <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" x-on:click=" mobileMenu = false">
            <span class="sr-only">Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="flex flex-1 justify-end">
          <a href="https://www.flightcircle.com" target="blank" class="text-sm font-semibold leading-6 text-gray-900">Scheduler <span aria-hidden="true">&rarr;</span></a>
        </div>
      </div>
      <div class="mt-6 space-y-2"
        x-data="{
          trainingProgramMobile : false, 
          aboutMobile : false, 
        }"
      >
        <%# Mobile links %>
        <%= button_to "Home", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Discovery flight", discovery_flight_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Visit school", visit_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Why become a pilot?", why_pilot_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Considering a university for pilot training?", pro_flight_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Pilot training process", pilot_programs_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
