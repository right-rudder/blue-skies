<!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden" role="dialog" aria-modal="true" >
    <div class="mt-16 fixed inset-y-0 left-0 z-10 w-full overflow-y-auto bg-white px-6 py-6"
    
    x-show="mobileMenu"
    x-cloak
    x-transition:enter="transition ease-out duration-300 transform"
    x-transition:enter-start="translate-y-full opacity-0"
    x-transition:enter-end="translate-y-0 opacity-100"
    x-transition:leave="transition ease-in duration-300 transform"
    x-transition:leave-start="translate-y-0 opacity-100"
    x-transition:leave-end="translate-y-full opacity-0"
    >
      <div class="flex items-center justify-between">
        <div class="flex flex-1">
          <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" x-on:click=" mobileMenu = false">
            <span class="sr-only">Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="flex flex-1 justify-end">
          <a href="https://www.flightcircle.com" target="blank" class="text-sm font-semibold leading-6 text-gray-900">Scheduler <span aria-hidden="true">&rarr;</span></a>
        </div>
      </div>
      <div class="mt-6 space-y-2"
        x-data="{
          trainingProgramMobile : false, 
          aboutMobile : false, 
        }"
      >
        <%# Mobile links %>
        <%= button_to "Home", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Discovery flight", discovery_flight_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Visit school", visit_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Why become a pilot?", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <%= button_to "Pilot training process", pilot_programs_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"%>
        <div class="flex items-center justify-between" x-on:click="trainingProgramMobile = ! trainingProgramMobile">
          <button class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Training programs</button>
          <div aria-hidden="true" class="" x-transition x-bind:class="{'rotate-[135deg] duration-300' : !trainingProgramMobile, 'duration-300 rotate[0deg]' : trainingProgramMobile}">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
          </div>
        </div>
        <%# Training Programs expand %>
        <div x-show="trainingProgramMobile">
          <%= button_to "Private Pilot", ppl_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "trainingProgramMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !trainingProgramMobile}"  %>
          <%= button_to "Instrument Rating", ifr_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "trainingProgramMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !trainingProgramMobile}"  %>
          <%= button_to "Commercial Pilot", cpl_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "trainingProgramMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !trainingProgramMobile}"  %>
          <%= button_to "CFI", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "trainingProgramMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !trainingProgramMobile}"  %>
          <%= button_to "CFII", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "trainingProgramMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !trainingProgramMobile}"  %>
        </div>
        <div class="flex items-center justify-between" x-on:click="aboutMobile = ! aboutMobile">
          <button class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">About us</button>
          <div aria-hidden="true" class="" x-transition x-bind:class="{'rotate-[135deg] duration-300' : !aboutMobile, 'duration-300 rotate[0deg]' : aboutMobile}">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
          </div>
        </div>
        <%# About expand %>
        <div x-show="aboutMobile">
          <%= button_to "Our Team", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "aboutMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !aboutMobile}" %>
          <%= button_to "Why Blue Skies Above?", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "aboutMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !aboutMobile}" %>
          <%= button_to "Join the team", join_team_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "aboutMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !aboutMobile}" %>
          <%= button_to "Blog", root_path, data: { turbo: false }, method: :get, class: "-mx-3 block rounded-lg px-3 py-2 text-base ml-2 font-semibold leading-7 text-gray-800 hover:bg-gray-50 animate-slide-in-left", "x-show": "aboutMobile", "x-transition": "", "x-bind:class": "{'animate-slide-out-left': !aboutMobile}" %>
        </div>

        <%= button_to "Contact us", contact_path, data: { turbo: false }, method: :get, class: "-ml-3 btn-primary" %>




        <%# Training Programs expand %>
        <%# Hover expand %>
      </div>
    </div>
  </div>